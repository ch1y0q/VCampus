<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.vcampus.dao.ITeacherMapper">

    <!-- Used By Auth Module -->
    <select id="verifyTeacher" parameterType="Teacher"
            resultType="boolean">
        SELECT COUNT(*) FROM `teachers` WHERE
            `cardNumber`=#{cardNumber} AND `password`=#{password}
    </select>
    <select id="getTeacherDetailByCardNumber" parameterType="String"
            resultType="Teacher">
        SELECT * FROM `teachers` WHERE
            `cardNumber`=#{cardNumber}
    </select>

    <select id="getNameByCardNumber" parameterType="String"
            resultType="String">
        SELECT `name` FROM `teachers` WHERE
            `cardNumber`=#{cardNumber}
    </select>

    <select id="getSaltByCardNumber" parameterType="String"
            resultType="String">
        SELECT `salt` FROM `teachers` WHERE
            `cardNumber`=#{cardNumber}
    </select>

    <select id="getPasswordByCardNumber" parameterType="String"
            resultType="String">
        SELECT `password` FROM `teachers` WHERE
            `cardNumber`=#{cardNumber}
    </select>

    <insert id="insertTeacher" parameterType="Teacher">
        INSERT INTO
            `teachers` VALUES (#{name},"","",#{cardNumber}, #{teacherNumber},
                               "","","",0,"", #{school},  #{teacherRank}, #{gender},  #{email},#{homepage},
                               #{phoneNumber},"")
    </insert>

    <delete id="deleteTeacher" parameterType="String">
        DELETE FROM
            `teachers` WHERE cardNumber = #{cardnumber}
    </delete>

    <select id="searchTeacherByCardNumber" parameterType="String"
            resultType="Integer">
        SELECT COUNT(*) FROM `teachers` WHERE `cardNumber` =
                                              #{cardnumber}
    </select>

    <select id="searchStudentByTeacherNumber" parameterType="String"
            resultType="Integer">
        SELECT COUNT(*) FROM `teachers` WHERE `teacherNumber` =
                                              #{teacherNumber}
    </select>

    <!--
