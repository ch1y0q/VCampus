<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.vcampus.dao.IDormLifeMapper">

    <select id="getHygieneMark" parameterType="Map"
            resultType="int">
        SELECT `hygieneMark` FROM `dormLife` WHERE
        `dormAddress`=#{dormAddress} AND `monthOrWeek`= #{weekNo}
    </select>

    <select id="getWaterRate" parameterType="Map"
            resultType="float">
        SELECT `waterCost` FROM `dormLife` WHERE
            `dormAddress`=#{dormAddress} AND `monthOrWeek`= #{weekNo}
    </select>

    <select id="getElectricityRate" parameterType="Map"
            resultType="float">
        SELECT `electricitycost` FROM `dormLife` WHERE
            `dormAddress`=#{dormAddress} AND `monthOrWeek`= #{weekNo}
    </select>

    <update id="setDormHygieneMark" parameterType="Map">
        UPDATE `dormLife` SET
            `hygieneMark` = #{hygieneMark} WHERE
            `dormAddress`= #{dormAddress} AND `monthOrWeek` = #{weekNo}
        LIMIT 1
    </update>

    <update id="setDormWaterRate" parameterType="Map">
        UPDATE `dormLife` SET
            `waterCost` = #{waterCost} WHERE
            `dormAddress`= #{dormAddress} AND `monthOrWeek` = #{weekNo}
        LIMIT 1
    </update>

    <update id="setDormElectricityRate" parameterType="Map">
        UPDATE `dormLife` SET
            `electricityCost` = #{electricityCost} WHERE
            `dormAddress`= #{dormAddress} AND `monthOrWeek` = #{weekNo}
        LIMIT 1
    </update>


</mapper>