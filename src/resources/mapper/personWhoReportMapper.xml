<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.vcampus.dao.IPersonWhoReportMapper">

    <!-- Used By Auth Module -->
    <insert id="insertPerson" parameterType="PersonWhoReport">
        INSERT INTO
            `dailyReport` VALUES ( #{idReport},#{cardNumber},#{personName},#{school}, #{date},
                                   #{temperature}, #{location},  #{city}, #{campus},#{ifQarantined},#{ifSuspected},
                                   #{ifDefinite},#{ifHistoryOfRiskyArea}
                                 )
    </insert>

    <select id="tableDisplayBySchool" parameterType="String"
            resultType="PersonWhoReport">
        SELECT `cardNumber`, `personName`, `school`,`date`,`temperature`,`location`,`city`,
               `campus`,`ifQarantined`,`ifSuspected`,`ifDefinite`,`ifHistoryOfRiskyArea`
        FROM `dailyReport`
        WHERE `school` LIKE '%${school}%'
    </select>

    <select id="tableDisplay"
            resultType="PersonWhoReport">
        SELECT `cardNumber`, `personName`, `school`,`date`,`temperature`,`location`,`city`,
               `campus`,`ifQarantined`,`ifSuspected`,`ifDefinite`,`ifHistoryOfRiskyArea`
        FROM `dailyReport`
    </select>


</mapper>