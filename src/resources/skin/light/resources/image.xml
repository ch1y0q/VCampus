<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.extended.image.WebImage -->

    <!-- Image -->
    <style type="image">
        <component>
            <opaque>false</opaque>
            <foreground>black</foreground>
        </component>
        <painter />
    </style>

    <!-- Portrait image -->
    <style type="image" id="portrait">
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="0" />
                    <WebShadow type="outer" width="10" />
                    <LineBorder color="170,170,170" />
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>