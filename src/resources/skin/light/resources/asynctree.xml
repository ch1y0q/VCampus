<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.extended.tree.WebAsyncTree -->

    <!-- Asynchronous tree -->
    <style type="tree" id="asynctree" />

    <!-- Non-opaque asynchronous tree -->
    <style type="tree" id="asynctree-non-opaque" extends="asynctree">
        <component>
            <opaque>false</opaque>
        </component>
    </style>

    <!-- Transparent asynchronous tree -->
    <style type="tree" id="asynctree-transparent" extends="asynctree-non-opaque">
        <painter>
            <decorations overwrite="true" />
        </painter>
    </style>

</skin>